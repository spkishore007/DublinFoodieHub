<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.comment %></td>
        <td><%= comment.rating %></td>
        <td><%= link_to 'Show', product_comment_path(@product, comment) %></td>
        <td><%= link_to 'Edit', edit_product_comment_path(@product, comment) %></td>
        <td><%= link_to 'Destroy', product_comments_path(@product, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_product_comment_path %>
<%= link_to 'Back to Pizza details', store_detail_products_path(@product) %>

