<div class="jumbotron">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item.reload, remote: true do |f| %>
        <h4 class="text-right">Price: <span style="color: red"><%= number_to_currency(order_item.unit_price,unit: "£")%></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update", class: "btn btn-primary" %>
              <%= link_to "Remove", order_item, { data: { confirm: "Are you sure to remove this pizza '#{order_item.product.name}' from the cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Total Price: <span style="color: red"><%= number_to_currency(order_item.total_price,unit: "£") %></span></h4>
      <% end %>
    </div>

  </div>
</div>