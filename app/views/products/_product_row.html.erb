<div class="jumbotron">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></small></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: red"><%= number_to_currency(product.price,unit: "Â£") %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
        <td><%= link_to 'View and Customise my pizza', store_detail_product_path(@store_detail, product), class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit Pizza', edit_store_detail_product_path(@store_detail, product), class: "btn btn-primary"  if policy(product).edit? %></td>
        <td><%= link_to 'Remove Pizza', store_detail_product_path(@store_detail, product), method: :delete, data: { confirm: 'Are you sure to remove this pizza?' }, class: "btn btn-danger"  if policy(product).destroy?%></td>
</div>